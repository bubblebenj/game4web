<!--
	Notes for nodes size :
		attribute scale="fit" : the object will fit the size of the parent
		attribute scale="keep_ratio" : the object will fit the size of the parent but will aspect ratio as define by x and y
		attribute scale="exact" : the object will of the size define by x and y
		
-->
<?xml version="1.0" encoding="utf-8" ?>
<data>
	<id name="body">
		<size	scale="fit"	x="800" y="600"></size>
		<align	handle="center"		x="50" 	y="50"  unit="%"></align>
	</id>
	
	<class name="bt_image">
		<size	scale="fit"			x="0"	y="0"></size>
		<align	handle="center"		x="50"	y="50" unit="%"></align>
	</class>
