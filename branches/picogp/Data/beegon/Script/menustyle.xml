<!--
	when an element gots a type and an id be aware that the properties defined
	in the id will override thios of the type.

	size :
		scale="fit"	: the object will fit the size of the parent
		scale="keep_ratio" : the object will fit the size of the parent but will aspect ratio as define by x and y
		scale="exact" : the object will of the size define by x and y
	align :
		handle="center" : the object is handled using its center coordinate
		handle="TL" : the object is handled using its top-left coordinate
		unit="%" : top left of the parent is x=0 y=0 bottom right is 100 100
		unit="px" : coordinate x, y are added to the parent top left coordinate
		
-->
<?xml version="1.0" encoding="utf-8" ?>
<data>
	<!-- TYPES -->
	
	<type name="body">
		<size	scale="fit"			x="800" y="600"></size>
		<align	handle="center"		x="50" 	y="50"  unit="%"></align>
	</type>
	
		<type name="background-image">
			<size	scale="keep_ratio"			x="50"	y="50"></size>
			<align	handle="center"		x="50" 	y="50"  unit="%"></align>
		</type>
	
	<type name="button">
		<size	scale="exact"		x="150"	y="50"></size>
		<align	handle="TL"			x="200"	y="50" unit="px"></align>
	</type>
	
		<type name="bt_image">
			<size	scale="keep_ratio"	x="512"	y="128"></size>
			<align	handle="center"		x="50"	y="50" unit="%"></align>
		</type>
	
	<type name="header">
		<size	scale="keep_ratio"	x="800"	y="200"></size>
		<align	handle="TL"			x="0" 	y="0"  unit="%"></align>
	</type>
	
		<type name="title_image">
			<size	scale="exact"	x="256"	y="128"></size>
			<align	handle="center"		x="50"	y="50" unit="%"></align>
		</type>
	
	<type name="footer">
		<size	scale="exact"		x="150"	y="200"></size>
		<align	handle="TL"			x="200" y="500" unit="px"></align>
	</type>
	
	<!-- ID -->
	
	<id name="bt_start_game">
		<align	handle="TL"			x="200" y="200" unit="px"></align>
	</id>
	
	<id name="bt_credits">
		<align	handle="TL"			x="200" y="350" unit="px"></align>
	</id>
	
	<id name="bt_back_to_main">
		<align	handle="TL"			x="0" y="0" unit="px"></align>
	</id>
	
	<id name="bt_quit_game">
		<size	scale="exact"		x="50"	y="50"></size>
		<align	handle="TL"			x="0" y="0" unit="px"></align>
	</id>
	
	<id name="img_quit_game">
		<size	scale="keep_ratio"		x="50"	y="50"></size>
		<align	handle="center"			x="50" y="50" unit="%"></align>
	</id>
	
</data>